<!-- START PACK BUY-->
<% packs.forEach(pack => { %>
  <div class="card container mt-5">
    <div class="row align-items-center">
      <!-- Image avec filtre -->
      <a href="/detailVideo/<%= pack._id %>">
        <div
        class="col-lg-6 mb-3 mb-lg-0 text-center p-2"
        style="
        --filter-color: 
            <%= pack.level === 'Débutant' ? 'rgba(90, 87, 252, 0.788)' : 
                (pack.level === 'Intermédiaire' ? 'rgba(249, 253, 0, 0.651)' : 
                (pack.level === 'Avancé' ? 'rgba(252, 25, 25, 0.5)' :
                'rgba(252, 87, 197, 0.76)')) %>;
        "
    >
        <div class="image-container">
          <img
            src="images/swennymelanievalue.png"
            alt="Image exemple"
            class="custom-image"
          />
        </div>
        </a>
      </div>
      <!-- Texte -->
      <div class="col-lg-6 text-center text-lg-start">
        <h2 class="mb-3"><%= pack.title %></h2>
        <p>
          <%= pack.description %>
        </p>
      </div>
    </div>
  </div>
<% }) %>
