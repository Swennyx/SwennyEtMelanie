  <body>
    <!-- START NavBar -->
    <header class="header-containt">
      <div class="navbar p-3">
        <div class="logo"><a href="/">Bachata Crew</a></div>
        <ul class="links">
          <li><a href="/">Accueil</a></li>
          <li><a href="/video">Vidéo</a></li>
          <li><a href="/#teacher">A propos</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
        <div class="buttons">
          <% if (user && (user.role === 'admin' || user.role === 'superadmin')) { %>
            <a href="/admin" class="action-button btn-profil">Admin panel</a>
          <% } %>
          <% if (!user) { %>
            <!-- Si l'utilisateur n'est PAS connecté, afficher Connexion et Inscription -->
            <a href="#" class="action-button pro btn-connexion">Connexion</a>
            <a href="#" class="action-button btn-inscription">Inscription</a>
          <% } else { %>
            <!-- Si l'utilisateur est connecté, afficher Déconnexion -->
            <a href="#" class="action-button btn-profil">Mon profil</a>
            <a href="/logout" class=" action-button pro btn-deconnexion">Déconnexion</a>
          <% } %>
        
        </div>
        <div class="burger-menu-button">
          <i class="fa-solid fa-bars"></i>
        </div>
      </div>
      <div class="burger-menu">
        <ul class="links">
          <li><a href="/">Accueil</a></li>
          <li><a href="/video">Vidéo</a></li>
          <li><a href="/#teacher">A propos</a></li>
          <li><a href="/contact">Contact</a></li>
          <div class="divider"></div>
          <div class="buttons-burger-menu">
            <% if (user && (user.role === 'admin' || user.role === 'superadmin')) { %>
              <a href="/admin" class="action-button pro btn-connexion">Admin</a>
            <% } %>
            <% if (!user) { %>
              <a href="#" class="action-button pro btn-connexion">Connexion</a>
              <a href="#" class="action-button btn-inscription">Inscription</a>
            <% } else { %>
              <a href="#" class="action-button btn-profil">Mon profil</a>
              <a href="/logout" class="action-button pro btn-deconnexion">Déconnexion</a>
            <% } %>
        </ul>
      </div>
      <!-- END NavBar -->